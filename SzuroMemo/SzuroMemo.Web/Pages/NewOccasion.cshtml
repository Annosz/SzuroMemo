@page
@model NewOccasionModel
@{
    ViewData["Title"] = "Új szűrővizsgálat";
}

<h2>Új szűrővizsgálat hirdetése</h2>

<br />

<form method="post">
    <div class="row">
        <div class="col-md-4">
            <label asp-for=@Model.Occasion.StartTime></label>
            <input asp-for=@Model.Occasion.StartTime class="form-control" />
            <span asp-validation-for=@Model.Occasion.StartTime class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <label asp-for=@Model.Occasion.EndTime></label>
            <input asp-for=@Model.Occasion.EndTime class="form-control" />
            <span asp-validation-for=@Model.Occasion.EndTime class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <label asp-for=@Model.Occasion.ScreeningId></label>
            <select asp-for=@Model.Occasion.ScreeningId asp-items="@Model.Screenings" class="form-control"></select>
            <span asp-validation-for=@Model.Occasion.ScreeningId class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <label asp-for=@Model.Occasion.HospitalId></label>
            <select asp-for=@Model.Occasion.HospitalId asp-items="@Model.Hospitals" class="form-control"></select>
            <span asp-validation-for=@Model.Occasion.HospitalId class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <label asp-for=@Model.Occasion.ReferralNeeded></label>
            <input asp-for=@Model.Occasion.ReferralNeeded class="form-control" />
            <span asp-validation-for=@Model.Occasion.ReferralNeeded class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <label asp-for=@Model.Occasion.Description></label>
            <textarea asp-for=@Model.Occasion.Description rows="5" cols="40" class="form-control"></textarea>
            <span asp-validation-for=@Model.Occasion.Description class="text-danger"></span>
        </div>
    </div>

    <br />
    <div class="form-group">
        <button type="submit" class="btn btn-default">Új alkalom felvétele</button>
    </div>
</form>
